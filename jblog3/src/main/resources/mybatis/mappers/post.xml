<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="post">
	<insert id="insert" parameterType="postvo">
		<![CDATA[
		insert 
			into post
			values(null, #{title }, #{contents }, now(), #{categoryNo })
		]]>
	</insert>
	
	<resultMap type="postvo" id="postSelectRM">
		<result property="no" column="no"/>
		<result property="title" column="title"/>
		<result property="contents" column="contents"/>
		<result property="regDate" column="reg_date"/>
		<result property="categoryNo" column="category_no"/>
	</resultMap>
	
	<select id="findByNo" parameterType="long" resultType="postvo">
		<![CDATA[
		select * 
			from post 
			where no = #{postNo }
		]]>
	</select>
	
	<select id="findByCategoryNo" parameterType="long" resultType="postvo">
		<![CDATA[
		select * 
			from post 
			where category_no = #{categoryNo }
		]]>
	</select>
	
	<select id="findAll" resultType="postvo" resultMap="postSelectRM">
		<![CDATA[
		select *
			from post
		]]>
	</select>
</mapper>
